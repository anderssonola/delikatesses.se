---
layout: layouts/base.njk
section: post
---

<article>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "headline": "{{title}}",

      "datePublished": "{{ page.date | machineDate }}",
      "author": [
        {
          "@type": "Person",
          "name": "{{ author }}"
        }
      ]
    }
  </script>

  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time> by {{ author }}
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
      {% for tag in tags %}
        {%- if tag != "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/' | url }}">‚Üê Hem</a>
</nav>
